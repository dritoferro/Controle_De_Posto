<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LargeText" parent="Base.TextAppearance.AppCompat.Large">

        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="MediumText" parent="Base.TextAppearance.AppCompat.Medium">

        <item name="android:layout_marginStart">@dimen/margin_ten</item>
        <item name="android:layout_marginTop">@dimen/margin_ten</item>

    </style>



</resources>
